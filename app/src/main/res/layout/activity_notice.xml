<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    tools:context=".NoticeActivity">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/imagePost"
        android:layout_width="@dimen/_120mdp"
        android:layout_height="@dimen/_100mdp"
        app:cardBackgroundColor="@color/green_400"
        android:layout_margin="@dimen/_10mdp"
        app:cardCornerRadius="@dimen/_10mdp">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_8font_mdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/_50mdp"
                android:layout_height="@dimen/_40mdp"
                android:padding="@dimen/_4mdp"
                android:background="@drawable/image_background"
                android:src="@drawable/ic_notification" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1mdp"
                android:background="@color/red_900"
                android:layout_marginTop="@dimen/_12font_mdp"/>
            <TextView
                android:layout_width="match_parent"
                android:text="Notice"
                android:textSize="@dimen/_20mdp"
                android:textStyle="bold"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/_4mdp"
                android:layout_height="match_parent"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_margin="@dimen/_10mdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:hint="Write your text"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submitBtn"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_10mdp"
        android:background="@color/purple_900"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10mdp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="@dimen/_20mdp"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10mdp">

        <ImageView
            android:id="@+id/imageGet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sunamgang"
            android:scaleType="fitXY"/>
    </androidx.cardview.widget.CardView>




</LinearLayout>