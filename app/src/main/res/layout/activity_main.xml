<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Admin Control"
        android:padding="@dimen/_7mdp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@color/blue_900"
        android:layout_marginTop="@dimen/_10mdp"
        android:textSize="@dimen/_30font_mdp"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10mdp"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/noticeViewId"
            android:layout_width="@dimen/_120mdp"
            android:layout_height="@dimen/_100mdp"
            app:cardBackgroundColor="@color/green_400"
            android:layout_margin="@dimen/_10mdp"
            app:cardCornerRadius="@dimen/_10mdp">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/_8font_mdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="@dimen/_50mdp"
                    android:layout_height="@dimen/_40mdp"
                    android:padding="@dimen/_4mdp"
                    android:background="@drawable/image_background"
                    android:src="@drawable/ic_notification" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1mdp"
                    android:background="@color/red_900"
                    android:layout_marginTop="@dimen/_12font_mdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="Notice"
                    android:textSize="@dimen/_20mdp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_4mdp"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_120mdp"
            android:layout_height="@dimen/_100mdp"
            app:cardBackgroundColor="@color/green_400"
            android:layout_margin="@dimen/_10mdp"
            app:cardCornerRadius="@dimen/_10mdp">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/_8font_mdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="@dimen/_50mdp"
                    android:layout_height="@dimen/_40mdp"
                    android:padding="@dimen/_4mdp"
                    android:background="@drawable/image_background"
                    android:src="@drawable/ic_notification" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1mdp"
                    android:background="@color/red_900"
                    android:layout_marginTop="@dimen/_12font_mdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="Notice"
                    android:textSize="@dimen/_20mdp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_4mdp"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/_10mdp"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_120mdp"
            android:layout_height="@dimen/_100mdp"
            app:cardBackgroundColor="@color/green_400"
            android:layout_margin="@dimen/_10mdp"
            app:cardCornerRadius="@dimen/_10mdp">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/_8font_mdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="@dimen/_50mdp"
                    android:layout_height="@dimen/_40mdp"
                    android:padding="@dimen/_4mdp"
                    android:background="@drawable/image_background"
                    android:src="@drawable/ic_notification" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1mdp"
                    android:background="@color/red_900"
                    android:layout_marginTop="@dimen/_12font_mdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="Notice"
                    android:textSize="@dimen/_20mdp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_4mdp"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_120mdp"
            android:layout_height="@dimen/_100mdp"
            app:cardBackgroundColor="@color/green_400"
            android:layout_margin="@dimen/_10mdp"
            app:cardCornerRadius="@dimen/_10mdp">
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/_8font_mdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="@dimen/_50mdp"
                    android:layout_height="@dimen/_40mdp"
                    android:padding="@dimen/_4mdp"
                    android:background="@drawable/image_background"
                    android:src="@drawable/ic_notification" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1mdp"
                    android:background="@color/red_900"
                    android:layout_marginTop="@dimen/_12font_mdp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:text="Notice"
                    android:textSize="@dimen/_20mdp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_4mdp"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</LinearLayout>